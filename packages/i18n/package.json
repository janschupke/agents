{
  "name": "@openai/i18n",
  "version": "1.0.0",
  "description": "Internationalization package for OpenAI monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0 --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run --passWithNoTests",
    "check": "pnpm typecheck && pnpm test && pnpm lint && pnpm format && pnpm build",
    "extract": "i18next -c i18next-parser.config.cjs",
    "extract:watch": "i18next -c i18next-parser.config.cjs --watch"
  },
  "dependencies": {
    "i18next": "^23.7.6",
    "react-i18next": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^8.54.0",
    "i18next-parser": "^9.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0"
  }
}
