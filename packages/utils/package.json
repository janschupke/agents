{
  "name": "@openai/utils",
  "version": "1.0.0",
  "description": "Shared utilities for OpenAI monorepo",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    },
    "./datetime": {
      "import": "./dist/datetime.js",
      "types": "./dist/datetime.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks.js",
      "types": "./dist/hooks.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "luxon": "^3.7.2",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "typescript": "^5.3.2"
  }
}
