{
  "name": "openai-monorepo",
  "version": "1.0.0",
  "description": "Fullstack monorepo with OpenAI chat API and React client",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,client,admin -c blue,green,yellow \"pnpm --filter api dev\" \"pnpm --filter client dev\" \"pnpm --filter admin dev\"",
    "dev:api": "pnpm --filter api dev",
    "dev:client": "pnpm --filter client dev",
    "dev:admin": "pnpm --filter admin dev",
    "build": "pnpm --filter api build && pnpm --filter client build && pnpm --filter admin build",
    "lint": "pnpm -r lint",
    "lint:apps": "pnpm --filter './apps/*' lint",
    "lint:packages": "pnpm --filter './packages/*' lint",
    "typecheck": "pnpm -r typecheck",
    "typecheck:apps": "pnpm --filter './apps/*' typecheck",
    "typecheck:packages": "pnpm --filter './packages/*' typecheck",
    "test": "pnpm -r test",
    "test:apps": "pnpm --filter './apps/*' test",
    "test:packages": "pnpm --filter './packages/*' test",
    "format": "pnpm -r format",
    "format:apps": "pnpm --filter './apps/*' format",
    "format:packages": "pnpm --filter './packages/*' format",
    "check": "pnpm -r check",
    "check:apps": "pnpm --filter './apps/*' check",
    "check:packages": "pnpm --filter './packages/*' check",
    "i18n:extract": "pnpm --filter @openai/i18n extract",
    "i18n:extract:watch": "pnpm --filter @openai/i18n extract:watch",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:ps": "docker-compose ps",
    "knip": "knip --no-config-hints",
    "knip:fix": "knip --fix --no-config-hints",
    "knip:fix:files": "knip --fix --allow-remove-files --no-config-hints"
  },
  "keywords": [
    "openai",
    "ai",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "knip": "^5.71.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
