{
  "name": "api",
  "version": "1.0.0",
  "description": "NestJS API for OpenAI chat",
  "main": "dist/src/main.js",
  "scripts": {
    "dev": "nest start --watch",
    "build": "prisma generate && nest build",
    "start": "node dist/src/main.js",
    "start:prod": "node dist/src/main.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "bash ./scripts/migrate-dev.sh",
    "prisma:migrate:create": "prisma migrate dev --create-only --skip-seed",
    "prisma:migrate:apply": "./scripts/apply-migration-direct.sh",
    "prisma:studio": "prisma studio",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0 --fix",
    "lint:check": "eslint . --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:run": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:integration": "jest --config ./test/jest-e2e.json",
    "check": "pnpm typecheck && pnpm test && pnpm lint && pnpm format && pnpm build"
  },
  "dependencies": {
    "@clerk/backend": "^1.34.0",
    "@nestjs/common": "^10.3.0",
    "@openai/shared-types": "workspace:*",
    "@openai/utils": "workspace:*",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.3.0",
    "@nestjs/platform-express": "^10.3.0",
    "@prisma/client": "^5.7.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "openai": "^4.20.0",
    "pinyin-pro": "^3.27.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "svix": "^1.81.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.0",
    "@nestjs/schematics": "^10.1.0",
    "@nestjs/testing": "^10.3.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.95",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prisma": "^5.7.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2"
  }
}
